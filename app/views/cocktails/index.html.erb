<h1>All Cocktails</h1>
<div class="container">
  <div class="card my-3" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=686&q=80" class="card-img-top" alt="...">
    <div class="card-body">
      <% @cocktails.each do |cocktail| %>
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <%= link_to "show", cocktail_path(cocktail), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

