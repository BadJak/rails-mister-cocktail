
<div class="container my-3">
<h1>My Cocktail</h1>
  <div class="card my-3" style="width: 32rem;">
    <% if @cocktail.id == 9 %>
          <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=686&q=80" class="card-img-top" alt="...">
          <% elsif @cocktail.id == 10 %>
            <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-img-top" alt="...">
          <% elsif @cocktail.id == 11 %>
            <img src="https://images.unsplash.com/photo-1542600176-9d2c4bb4bc1a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=701&q=80" class="card-img-top" alt="...">
          <% elsif @cocktail.id == 12 %>
            <img src="https://images.unsplash.com/photo-1514361892635-6b07e31e75f9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" class="card-img-top" alt="...">
          <% elsif @cocktail.id == 13 %>
            <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80" class="card-img-top" alt="...">
          <% elsif @cocktail.id == 14 %>
            <img src="https://images.unsplash.com/photo-1550555179-ba6377f4b5ea?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=752&q=80" class="card-img-top" alt="...">

          <% end %>
    <div class="card-body">
        <h5 class="card-title text-align-center"><%= @cocktail.name %></h5>
        <p class="card-text">
          <% @cocktail.doses.each do |dose| %>
           <div class="d-flex justify-content-between">
              <div class="d-flex text-success">
                <div class="px-3">
                <i class="fas fa-glass-martini-alt"></i>
                </div>
                <%= dose.description %>
              </div>
              <div class="d-flex text-primary">
                <div class="px-3">
                <i class="fas fa-shopping-basket"></i>
                </div>
                <%= dose.ingredient.name %>
              </div>
              <div class="ml-5">
                <%= link_to dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
                  <i class="text-danger fas fa-trash-alt"></i>
                <% end %>
              </div>
           </div>
          <% end %>
        </p>
          <%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-lg btn-block btn-primary" do %>
            <i class="fas fa-plus"></i>   Add Dose
          <% end %>


    </div>
  </div>
</div>
