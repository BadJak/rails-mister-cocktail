
<div class="container my-3">
  <h1>My Cocktail</h1>
  <div class="row">
  <div class="col-6 col-sm-6 col-lg-4">
    <div class="card my-3" style="width: 32rem;">

       <% if @cocktail.photo.present? %>
          <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
        <% end %>


      <div class="card-body">
          <h5 class="card-title text-align-center"><%= @cocktail.name %></h5>
          <p class="card-text">
            <% @cocktail.doses.each do |dose| %>
             <div class="d-flex justify-content-between">
                <div class="d-flex text-success">
                  <div class="px-3">
                  <i class="fas fa-glass-martini-alt"></i>
                  </div>
                  <%= dose.description %>
                </div>
                <div class="d-flex text-primary">
                  <div class="px-3">
                  <i class="fas fa-shopping-basket"></i>
                  </div>
                  <%= dose.ingredient.name %>
                </div>
                <div class="ml-5">
                  <%= link_to dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } do %>
                    <i class="text-danger fas fa-trash-alt"></i>
                  <% end %>
                </div>
             </div>
            <% end %>
          </p>
            <%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-lg btn-block btn-primary" do %>
              <i class="fas fa-plus"></i>   Add Dose
            <% end %>


      </div>
    </div>
  </div>
  </div>
</div>
